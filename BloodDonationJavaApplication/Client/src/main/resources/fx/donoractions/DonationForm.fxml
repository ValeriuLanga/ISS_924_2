<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="700.0" prefWidth="700.0" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="600.0" prefWidth="600.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="100.0">
                     <children>
                        <Label text="Fill Donation Form">
                           <font>
                              <Font name="Trebuchet MS" size="24.0" />
                           </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="43.0" text="Please check the donation requirements to see if you are eligible for donation!">
                           <font>
                              <Font name="Trebuchet MS" size="16.0" />
                           </font>
                        </Label>
                        <Label fx:id="eligibilityLabel" layoutX="10.0" layoutY="65.0">
                           <font>
                              <Font name="Trebuchet MS" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children></HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="100.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="50.0">
                           <children>
                              <Label text="First Name: ">
                                 <font>
                                    <Font name="Trebuchet MS" size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="donationFormFirstName" />
                              <Label text="Last Name: ">
                                 <font>
                                    <Font name="Trebuchet MS" size="14.0" />
                                 </font>
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="donationFormLastName" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="30.0">
                           <children>
                              <Label text="Specific person name (optional): ">
                                 <font>
                                    <Font name="Trebuchet MS" size="14.0" />
                                 </font>
                              </Label>
                              <TextField />
                           </children>
                        </HBox>
                        <Label prefHeight="20.0" text="(Fill this only if you want to donate to a specific person.)" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <children>
                  <Label text="Date of birth: ">
                     <font>
                        <Font name="Trebuchet MS" size="14.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="donationFormDateOfBirth" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="100.0">
                     <children>
                        <Label text="Address: ">
                           <font>
                              <Font name="Trebuchet MS" size="14.0" />
                           </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="50.0" text="(Actual address from id card)" />
                        <HBox alignment="CENTER_LEFT" prefHeight="30.0">
                           <children>
                              <Label prefHeight="25.0" text="Street: ">
                                 <font>
                                    <Font name="Trebuchet MS" size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="addressStreet" prefHeight="25.0" />
                              <Label layoutX="10.0" layoutY="13.0" prefHeight="25.0" text="Number: ">
                                 <font>
                                    <Font name="Trebuchet MS" size="14.0" />
                                 </font>
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="addressNumber" layoutX="54.0" layoutY="13.0" prefHeight="25.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="64.0" prefHeight="30.0">
                           <children>
                              <Label prefHeight="25.0" text="City: ">
                                 <font>
                                    <Font name="Trebuchet MS" size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="addressCity" prefHeight="25.0" />
                              <Label layoutX="10.0" layoutY="13.0" prefHeight="25.0" text="Country: ">
                                 <font>
                                    <Font name="Trebuchet MS" size="14.0" />
                                 </font>
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="addressCountry" layoutX="54.0" layoutY="13.0" prefHeight="25.0" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="200.0" />
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="310.0" prefHeight="100.0" prefWidth="200.0">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="100.0">
                     <children>
                        <Label text="Residence (optional): ">
                           <font>
                              <Font name="Trebuchet MS" size="14.0" />
                           </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="50.0" text="(Only if you live at another address other than the one in your id card)" />
                        <HBox alignment="CENTER_LEFT" prefHeight="30.0">
                           <children>
                              <Label prefHeight="25.0" text="Street: ">
                                 <font>
                                    <Font name="Trebuchet MS" size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="residenceStreet" prefHeight="25.0" />
                              <Label layoutX="10.0" layoutY="13.0" prefHeight="25.0" text="Number: ">
                                 <font>
                                    <Font name="Trebuchet MS" size="14.0" />
                                 </font>
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="residenceNumber" layoutX="54.0" layoutY="13.0" prefHeight="25.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="64.0" prefHeight="30.0">
                           <children>
                              <Label prefHeight="25.0" text="City: ">
                                 <font>
                                    <Font name="Trebuchet MS" size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="residenceCity" prefHeight="25.0" />
                              <Label layoutX="10.0" layoutY="13.0" prefHeight="25.0" text="Country: ">
                                 <font>
                                    <Font name="Trebuchet MS" size="14.0" />
                                 </font>
                                 <padding>
                                    <Insets left="20.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="residenceCountry" layoutX="54.0" layoutY="13.0" prefHeight="25.0" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Button fx:id="submitButton" mnemonicParsing="false" text="Submit" />
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
         </children></VBox>
   </children>
</fx:root>
